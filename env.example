# MongoDB Atlas Configuration
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.name.mongodb.net/
MONGODB_DATABASE=personal_ai
MONGODB_COLLECTION=conversations

# LM Studio Configuration (Local LLM)
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=qwen/qwen3-14b
LM_STUDIO_API_KEY=not-needed

# Voyage AI Configuration
VOYAGE_API_KEY=your_voyage_api_key_here
VOYAGE_MODEL=voyage-3-large

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Web Search Security Configuration
WEB_SEARCH_ENABLED=false
WEB_SEARCH_REQUIRES_EXPLICIT_REQUEST=true
MAX_WEB_SEARCH_RESULTS=3

# Optional: Web Framework Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true 